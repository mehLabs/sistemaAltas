{
  "name": "backend",
  "version": "1.0.0",
  "description": "Proyecto para GOTAM",
  "main": "src/server/index.ts",
  "scripts": {
    "test:unit": "cross-env ENV_FILE=./config/.env.test jest --runInBand --detectOpenHandles --verbose",
    "build": "tsc -p .",
    "resources": "copyfiles *.xlsx -u 2 src/resources/*.xlsx dist/resources/",
    "start:dev": "concurrently \"npx tsc --watch\" \"npm run resources && nodemon -q dist/server/index.js\"",
    "start": "npm run build && node dist/server/index.js",
    "test": "jest --verbose --detectOpenHandles"
  },
  "author": "Hugo Iturrieta",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.28.0",
    "sequelize-typescript": "^2.1.5",
    "sqlite3": "^5.1.4",
    "xlsx": "^0.18.5",
    "pg": "^8.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@jest/globals": "^29.3.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.6",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.11",
    "concurrently": "^7.6.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  }
}
